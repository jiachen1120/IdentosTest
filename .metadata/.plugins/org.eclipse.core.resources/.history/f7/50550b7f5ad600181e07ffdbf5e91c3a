package main;

public class Solution {
	public static void main(String args[]) {
		Solution test = new Solution();
		test.printTable(12, 12);
	}
	
	public void printTable(int num1, int num2) {
		int result = num1 * num2;
		int spaceCount = 5; // define the left boundary of the display
		if (num1 < num2) {	// larger one appear in the first line is look better
			int temp = num1;
			num1 = num2;
			num2 = temp;
		}
		// display first number
		for (int i = 0; i < spaceCount - (num1 >= 10 ? 2 : 1); i++) {
			System.out.print(" ");
		}
		System.out.print(num1 + "\n");
		// display second number
		System.out.print("*");
		for (int i = 1; i < spaceCount - (num2 >= 10 ? 2 : 1); i++) {
			System.out.print(" ");
		}
		System.out.print(num2 + "\n");
		System.out.println("-----");
//		while (num2 > 0) {
//			int pop = num2 % 10;
//			num2 = num2 / 10;
//			System.out.print(pop * num1);
//			for (int i = 0; i < spaceCount; i++) {
//				System.out.println(" ");
//			}
//			System.out.println();
//		}
		if (num1 >= 10 && num2 >= 10) {
			System.out.println("-----");
			System.out.println(result);
		}
	}
}
